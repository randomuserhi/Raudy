{ 
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "build",
    "target": "ES2021",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false
  },
  "exclude": [ "node_modules" ] 
}